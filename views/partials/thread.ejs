<article id="topContainer" class="bg-theme-postPrimary rounded-2xl min-w-[300px] w-[1500px] h-fit lg:max-w-[60vw] max-w-[97%] resize p-2">
    <div class="hidden flex flex-row h-fit items-center gap-1 xl:gap-3 grow text-theme-textMuted" id="threadCollapsed">
        <h1 class="lg:text-2xl text-lg font-bold align-middle truncate">Collapsed Post Template</h1>
        <div class="text-base">
            <span class="material-symbols-rounded align-middle" style="font-variation-settings: 'FILL' 1;">image</span>
            <small class="text-base">23</small>
            <span class="material-symbols-rounded align-middle" style="font-variation-settings: 'FILL' 1;">chat</span>
            <small class="text-base">17</small>
        </div>
        <small class="text-base hidden xl:inline grow text-right">
            x.xh ago • dd.mm.yyyy • hh:mm:ss
        </small>
        <button id="expandButton" class="size-6 rounded-lg bg-theme-bgAccent xl:order-first" >
            <span class="text-white material-symbols-rounded content-center" style="font-variation-settings: 'wght' 700;">add</span>
        </button>
    </div>


    <div id="threadExpanded" class="flex-col flex gap-1">
        <div class="flex flex-row h-fit items-center gap-3 grow" id="threadTitle">
            <h1 class="lg:text-2xl text-lg font-bold align-middle grow">Expanded Post Template</h1>
            <small class="text-base text-theme-textSecond hidden xl:inline justify-self-end">
                x.xh ago • dd.mm.yyyy • hh:mm:ss
            </small>
            <button id="expandButton" class="size-6 rounded-lg bg-theme-bgAccent xl:order-first" >
                <span class="text-white material-symbols-rounded content-center" style="font-variation-settings: 'wght' 700;">remove</span>
            </button>
        </div>

        <div id="threadMain" class="flex flex-row gap-2 grow">
            <div id="threadImage" class="hidden xl:flex flex-col w-1/3 h-auto min-h-[300px] bg-green-700">

            </div>
            
            <div  class="xl:w-2/3 flex flex-col grow gap-2">
                <div id="threadMainMenu" class="w-full flex flex-row gap-1">
                    <div class="bg-theme-postSecond grow p-1 text-sm line-clamp-2" id="replySection">
                        Replies: 
                    </div>
                    <div class="tooltip z-auto" data-tip="Report">
                        <button class="material-symbols-rounded btn text-theme-textSecond bg-theme-postSecond border-0 p-2" style="font-variation-settings: 'FILL' 1;">flag</button>
                    </div>
                    <div class="tooltip z-auto" data-tip="Share">
                        <button class="material-symbols-rounded btn text-theme-textSecond bg-theme-postSecond border-0 p-2" style="font-variation-settings: 'FILL' 1;">share</button>
                    </div>
                    <div class="tooltip z-auto" data-tip="Bookmark">
                        <button class="material-symbols-rounded btn text-theme-textSecond bg-theme-postSecond border-0 p-2" style="font-variation-settings: 'FILL' 0;">bookmark</button>
                    </div>
                    <div class="tooltip z-auto" data-tip="Reply">
                        <button class="btn bg-theme-bgAccent border-0 font-bold text-bas leading-snug text-white">Anonymous <br> №####### </button>
                    </div>
                    
                </div>

                <div id="threadImageMobile" class="xl:hidden h-[25dvh] bg-green-700 w-full">
                    
                </div>

                <p class="text-justify grow">
                    Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                </p>
                
                <div id="replyMenu" class="bg-theme-postSecond rounded-lg flex gap-2 p-1">
                    <div class="text-base ml-2 w-[100px] align-middle">
                        <span class="material-symbols-rounded align-middle" style="font-variation-settings: 'FILL' 1;">image</span>
                        <small class="text-base mr-1">23</small>
                        <span class="material-symbols-rounded align-middle" style="font-variation-settings: 'FILL' 1;">chat</span>
                        <small class="text-base">17</small>
                    </div>
                    <span class="truncate">
                        ommited, Click here 
                    </span>
                    <span class="text-white material-symbols-rounded content-center xl:order-1 bg-theme-bgAccent h-full rounded-lg px-1 ml-auto" style="font-variation-settings: 'wght' 700; font-size: large;">remove</span>
                </div>

            </div>
        </div>


    </div>




</article>